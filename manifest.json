{
   "name": "ReverSearch",
   "description": "Reverse searches an image through a variety of search engines and tries to grab the best match.",
   "version": "1.0",
   "manifest_version": 3,
   "background": {
      "service_worker": "/js/background.js"
   },
   "content_scripts": [{
      "js": [ "/js/content.js" ],
      "matches": ["<all_urls>"]
    }],
   "permissions": [
      "storage", 
      "activeTab", 
      "scripting",
      "contextMenus"
   ],
   "options_page": "/html/options.html",
   "action": {
      "default_popup": "/html/popup.html",
      "default_icon": {
         "16": "/images/get_started16.png",
         "32": "/images/get_started32.png",
         "48": "/images/get_started48.png",
         "128": "/images/get_started128.png"
       }
   },
   "icons": {
      "16": "/images/get_started16.png",
      "32": "/images/get_started32.png",
      "48": "/images/get_started48.png",
      "128": "/images/get_started128.png"
    }
 }